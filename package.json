{
  "name": "restful-api-test-suite",
  "version": "1.0.0",
  "description": "Production-ready REST API testing framework using Playwright with TypeScript - Service Objects Pattern",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:products": "playwright test tests/products.api.spec.ts",
    "test:cart": "playwright test tests/cart.api.spec.ts",
    "test:auth": "playwright test tests/auth.api.spec.ts",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:performance": "playwright test --grep @performance",
    "test:security": "playwright test --grep @security",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "keywords": [
    "api-testing",
    "rest-api",
    "playwright",
    "typescript",
    "automation",
    "qa",
    "testing-framework",
    "service-objects"
  ],
  "author": "Caleb Solomon",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "allure-playwright": "^2.10.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "faker": "^5.5.3",
    "ajv": "^8.12.0"
  }
}
